public boolean waitWhileElementPresentXpath(String locator, int maxSeconds){
		long initialMillis = System.currentTimeMillis();
		boolean loading = true;
		boolean timeout = false;
		do {
			try{
				driver.findElement(By.xpath(locator));
			}catch(Exception e){
				loading = false;
			}
			long currentMillis = System.currentTimeMillis();
			if ((currentMillis - initialMillis)/ 1000 >= maxSeconds){
				loading =false;
				timeout=true;
			}
		} while (loading);
		if (timeout){
			Reporter.log("Tiempo Acabado");
			return false;
		}else{
			return true;
		}
	}
	
	
	public boolean waitForElement(WebDriver driver, By locator, int seconds){
		if (seconds>0){
			System.out.println("Esperando por elemento "+locator+" por "+seconds+" segundos.");
		}else{
			System.out.println("Buscando si elemento "+locator+" esta presente.");
		}
		try{
			seconds = (seconds == 0 ? 1 : seconds);
			WebDriverWait wait = new WebDriverWait(driver,seconds);
			wait.until(ExpectedConditions.visibilityOfElementLocated(locator));
			driver.findElement(locator);
			return true;
		}catch (NoSuchElementException e){
			return false;
		}
	}
	
	
	
	public boolean encontroComentario(){
		driver.switchTo().frame(driver.findElement(By.xpath("//iframe[@class='fb_ltr']")));
		WebElement comentario = driver.findElement(By.xpath("/html/body/div/div/div/div/div/div[3]/div/div[2]/div/div[2]/div/div[1]/div/span[1]/span"));
		return true;
	}
	
	
	public boolean ExisteElemento(WebDriver driver,By locator){
		try{
			WebDriverWait wait = new WebDriverWait(driver,5);
			wait.until(ExpectedConditions.visibilityOfElementLocated(locator));
			driver.findElement(locator);
			return true;
		}catch (Exception e){
			return false;
		}
	}